@model CRUDapp.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1 class="mb-4">Delete Student</h1>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this student?
</div>

<div class="card mb-4" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Enrollment Date</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="StudentId" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
